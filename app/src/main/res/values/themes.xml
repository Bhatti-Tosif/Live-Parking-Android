<resources >
    <!-- Base application theme. -->
    <style name="Base.Theme.TegB_Demo_App" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TegB_Demo_App" parent="Base.Theme.TegB_Demo_App" />

    //Style for TagB Login Button
    <style name="ThemeOverlay.Material3.Button.TagB">
        <item name="android:textColor">@color/deepAqua</item>
        <item name="font">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/tagBWhite</item>
        <item name="backgroundColor">@color/tagBWhite</item>
        <item name="cornerRadius">5dp</item>
    </style>

    //Simple text 16sp
    <style name="TextStyle16sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    //Style for textField heading text
    <style name="TextFieldHeadingText">
        <item name="android:textColor">@color/tagBWhite</item>
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="font">@font/poppins_medium</item>
    </style>

    //Style for showing Heading
    <style name="TextStyle20sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="font">@font/poppins_semi_bold</item>
    </style>

    //Style for Simple result display
    <style name="TextStyle16spGray">
        <item name="android:textColor">#717171</item>
        <item name="android:textSize">16sp</item>
        <item name="font">@font/poppins_medium</item>
    </style>

    //Style for Segment Button
    <style name="SegmentButtonStyle">
        <item name="android:textColor">@color/tagBWhite</item>
        <item name="font">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="TextViewForTitle">
        <item name="android:textColor">@color/tagBWhite</item>
        <item name="font">@font/poppins_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    //Change StatusBar Color
    <style name="StatusBarTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/deepAqua</item>
    </style>

    // In colors.xml
    <style name="CursorColor">
        <item name="colorPrimary">@color/white</item>
    </style>>

    //TextInput EditText Common Style
    <style name="TextInputEditTextStyle">
        <item name="android:background">@drawable/edit_text_white_boarder</item>
        <item name="android:textColor">@color/edit_text_boarder_color</item>
        <item name="maxLines">1</item>
        <item name="theme">@style/CursorColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    //TextInputLayout common Style
    <style name="TextInputLayoutStyle">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10dp</item>
        <item name="boxStrokeColor">@color/tagBWhite</item>
        <item name="boxStrokeWidth">@dimen/_2dp</item>
    </style>

</resources>