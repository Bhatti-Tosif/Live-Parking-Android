<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.tegb_demo_app.viewModel.AuthenticationViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deepAqua">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deepAqua"
            tools:context=".activity.authentication.LoginActivity">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_16dp" />

            <include
                android:id="@+id/toolBar"
                layout="@layout/top_common_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_logo_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:contentDescription="@string/btn_login_with_email"
                android:src="@drawable/logo_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolBar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_personal"
                style="@style/SegmentButtonStyle"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_40dp"
                android:backgroundTint="@color/selected_btn_color"
                android:text="@string/txt_personal"
                app:layout_constraintEnd_toStartOf="@+id/btn_business"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_logo_white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_business"
                style="@style/SegmentButtonStyle"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40dp"
                android:layout_marginEnd="@dimen/_16dp"
                android:backgroundTint="@color/btn_selected_aqua"
                android:text="@string/txt_business"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_personal"
                app:layout_constraintTop_toBottomOf="@id/iv_logo_white" />

            <TextView
                android:id="@+id/tv_email_id"
                style="@style/TextFieldHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40dp"
                android:text="@string/txt_email_id"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/btn_business" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_email"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                app:boxCornerRadiusBottomStart="@dimen/_10dp"
                app:boxCornerRadiusTopEnd="@dimen/_10dp"
                app:boxCornerRadiusTopStart="@dimen/_10dp"
                app:boxStrokeColor="@color/tagBWhite"
                app:boxStrokeWidth="@dimen/_2dp"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintStart_toStartOf="@+id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/tv_email_id">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_enter_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_white_boarder"
                    android:maxLines="1"
                    android:textColor="@color/edit_text_boarder_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_password"
                style="@style/TextFieldHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/txt_password"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/txt_email" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_password"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                app:boxCornerRadiusBottomStart="@dimen/_10dp"
                app:boxCornerRadiusTopEnd="@dimen/_10dp"
                app:boxCornerRadiusTopStart="@dimen/_10dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="@dimen/_2dp"
                app:layout_constraintEnd_toEndOf="@id/right_guide"
                app:layout_constraintStart_toStartOf="@+id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/tv_password"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_white_boarder"
                    android:inputType="textPassword"
                    android:textColor="@color/edit_text_boarder_color" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/ThemeOverlay.Material3.Button.TagB"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/btn_login_with_email"
                app:layout_constraintEnd_toStartOf="@+id/right_guide"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/txt_password" />

            <View
                android:id="@+id/left_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1dp"
                android:background="@color/edit_text_boarder_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_or"
                app:layout_constraintEnd_toStartOf="@+id/tv_or"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toTopOf="@id/tv_or" />

            <TextView
                android:id="@+id/tv_or"
                style="@style/TextStyle16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/txt_or"
                android:textColor="@color/tagBWhite"
                app:layout_constraintEnd_toStartOf="@+id/right_view"
                app:layout_constraintStart_toEndOf="@id/left_view"
                app:layout_constraintTop_toBottomOf="@id/tv_forgot_password" />

            <View
                android:id="@+id/right_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1dp"
                android:background="@color/edit_text_boarder_color"
                app:layout_constraintBottom_toBottomOf="@id/tv_or"
                app:layout_constraintEnd_toStartOf="@id/right_guide"
                app:layout_constraintStart_toEndOf="@+id/tv_or"
                app:layout_constraintTop_toTopOf="@id/tv_or" />

            <TextView
                android:id="@+id/tv_forgot_password"
                style="@style/TextFieldHeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/txt_forgot_password"
                app:layout_constraintEnd_toStartOf="@+id/right_guide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_login" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apple"
                style="@style/ThemeOverlay.Material3.Button.TagB"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_20dp"
                android:gravity="center"
                android:text="@string/txt_continue_with_apple"
                android:textColor="@color/black"
                app:icon="@drawable/apple_icone"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_10dp"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/right_guide"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@id/tv_or" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_google"
                style="@style/ThemeOverlay.Material3.Button.TagB"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:gravity="center"
                android:text="@string/txt_google"
                android:textColor="@color/googleRedColor"
                app:icon="@drawable/google"
                app:iconGravity="textStart"
                app:iconTint="@color/googleRedColor"
                app:layout_constraintEnd_toStartOf="@+id/btn_faceBook"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/btn_apple" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_faceBook"
                style="@style/ThemeOverlay.Material3.Button.TagB"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/txt_facebook"
                android:textColor="@color/faceBookColor"
                app:icon="@drawable/face_book"
                app:iconGravity="textStart"
                app:iconTint="@color/faceBookColor"
                app:layout_constraintEnd_toStartOf="@+id/right_guide"
                app:layout_constraintStart_toEndOf="@+id/btn_google"
                app:layout_constraintTop_toBottomOf="@+id/btn_apple" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>